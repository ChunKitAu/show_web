<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator/config.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 配置通用Mapper的MBG插件相关信息 -->
        <plugin type="${mapper.plugin}">
            <property name="mappers" value="${mapper.Mapper}"/>
        </plugin>

        <!-- 配置连接数据库的基本信息 -->
        <jdbcConnection
                driverClass="${jdbc.driverClass}"
                connectionURL="${jdbc.url}"
                userId="${jdbc.user}"
                password="${jdbc.password}">
        </jdbcConnection>

        <!-- 配置Java实体类存放位置 -->
        <javaModelGenerator
                targetPackage="com.chunkit.show_web.entity"
                targetProject="src/main/java"/>

        <!-- 配置XxxMapper.xml存放位置 -->
        <sqlMapGenerator
                targetPackage="mapper"
                targetProject="src/main/resources"/>

        <!-- 配置XxxMapper.java存放位置 -->
        <javaClientGenerator
                targetPackage="com.chunkit.show_web.mapper"
                targetProject="src/main/java"
                type="XMLMAPPER"/>

        <!--建立表对应的entity、dao、xxx.xml文件-->
        <!--用户-->
<!--        <table tableName="article" domainObjectName="Article">-->
<!--        <generatedKey column="id" sqlStatement="Mysql" identity="true"/>-->
<!--        </table>-->

<!--        <table tableName="user" domainObjectName="User">-->
<!--            <generatedKey column="userId" sqlStatement="Mysql" identity="true"/>-->
<!--        </table>-->

        <table tableName="gallery" domainObjectName="Gallery">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>


    </context>
</generatorConfiguration>